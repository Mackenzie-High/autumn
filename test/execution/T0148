module Main in execution;

design Person
{
    data name : String;

    data age : int;

    method speak(text : String) : void;
}



@Start
defun main (args : String[]) : void
{
    # (create Person) invokes the nullary constructor.
    val p = (create Person);



    # Calling the constructor must actually create an object.
    assert p != null;

    # The created prototype must be an instance of the design.
    assert (instanceof p : Person);

    # The prototype must contain the members declared in the design.
    assert (F::len (p.members)) == 3;
}