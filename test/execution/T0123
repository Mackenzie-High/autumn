module Main in execution;

tuple T0 ();
tuple T1 (x : int);
tuple T2 (x : int, y : int);
tuple T3 (x : int, y : int, z : int);

@Start
defun main (args : String[]) : void
{
    var t0 = (new T0);
    var t1 = (new T1 100);
    var t2 = (new T2 200, 300);
    var t3 = (new T3 400, 500, 600);

    assert 0 == (t0.size);
    assert 1 == (t1.size);
    assert 2 == (t2.size);
    assert 3 == (t3.size);

    assert (t0.isEmpty) == true;
    assert (t1.isEmpty) == false;
    assert (t2.isEmpty) == false;
    assert (t3.isEmpty) == false;

    let t0 = (T0::instance);
    let t1 = (T1::instance);
    let t2 = (T2::instance);
    let t3 = (T3::instance);

    assert 0 == (t0.size);
    assert 1 == (t1.size);
    assert 2 == (t2.size);
    assert 3 == (t3.size);

    assert (t0.isEmpty) == true;
    assert (t1.isEmpty) == false;
    assert (t2.isEmpty) == false;
    assert (t3.isEmpty) == false;
}