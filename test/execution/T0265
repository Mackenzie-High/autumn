module Main in execution;

tuple Group (x : String, y : String, z : String);


@Start
defun main (args : String[]) : void
{
    delegate method : MethodEquals => My::handler;

    val p = new Group("Jetty", "Fluffy", "Molly");

    val q = Records::bindEquals(p, method);

    assert q == "Jetty";
    assert q != "Fluffy";
    assert q != "Molly";
}

defun handler (self : Group, other : Object) : boolean
{
    return self.x() == other;
}